# debian-glibc options

## depends on ! WINDOWS && ! BARE_METAL && ARCH_USE_MMU && ! FREEBSD
##
## select KERNEL_SUPPORTS_SHARED_LIBS
## select LIBC_SUPPORT_THREADS_NATIVE
##

choice
    bool
    prompt "Debian glibc version"
# Don't remove next line
# CT_INSERT_VERSION_BELOW

config DEBIAN_GLIBC_V_2_3_6
    bool
    prompt "debian-2.3.6"

config UBUNTU_GLIBC_V_2_8
    bool
    prompt "ubuntu-2.8"

endchoice

config DEBIAN_GLIBC_VERSION
    string
# Don't remove next line
# CT_INSERT_VERSION_STRING_BELOW
    default "debian-2.3.6" if DEBIAN_GLIBC_V_2_3_6
    default "ubuntu-2.8" if UBUNTU_GLIBC_V_2_8
